<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="us.insolit.connector" android:versionCode="1" android:versionName="0.0.1">
  <uses-sdk android:minSdkVersion="11"
            android:targetSdkVersion="21" />
  <uses-permission android:name="android.permission.BLUETOOTH" />

  <!-- Used for Google Now -->
  <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

  <!-- Used for GPS record/playback -->
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

  <application android:label="@string/app_name" >
    <service android:name=".BluetoothService"
             android:enabled="true"
             android:exported="false">
    </service>
    <activity android:name=".MainActivity"
              android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <receiver android:name=".AutoStartReceiver"
              android:enabled="true"
              android:exported="true">
      <intent-filter android:priority="500">
        <action android:name="android.bluetooth.adapter.action.CONNECTION_STATE_CHANGED" />
        <action android:name="android.bluetooth.adapter.action.STATE_CHANGED" />
        <action android:name="android.bluetooth.device.action.ACL_CONNECTED" />
        <action android:name="android.bluetooth.headset.action.STATE_CHANGED" />
        <action android:name="android.bluetooth.intent.action.HEADSET_STATE_CHANGED" />
        <action android:name="android.intent.action.BOOT_COMPLETED" />
        <action android:name="android.media.ACTION_SCO_AUDIO_STATE_UPDATED" />
      </intent-filter>
    </receiver>

    <activity android:name=".vr.WakeUpActivity"
              android:theme="@android:style/Theme.Translucent.NoTitleBar"
              android:launchMode="singleTask">
    </activity>

    <receiver android:name=".vr.StartVRReceiver"
              android:enabled="true"
              android:exported="true">
      <intent-filter>
        <action android:name="us.insolit.connector.START_VR" />
      </intent-filter>
    </receiver>


    <receiver android:name=".gps.GPSRecordReceiver"
              android:enabled="true"
              android:exported="true">
      <intent-filter>
        <action android:name="us.insolit.connector.START_GPS_RECORD" />
      </intent-filter>
      <intent-filter>
        <action android:name="us.insolit.connector.STOP_GPS_RECORD" />
      </intent-filter>
    </receiver>
  </application>
</manifest>
